{
  "name": "react-utils",
  "version": "1.0.2",
  "description": "Package for comfortable debugging react application",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "umd:main": "dist/index.umd.js",
  "unpkg": "dist/index.umd.js",
  "jsdelivr": "dist/index.umd.js",
  "jsnext:main": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "start": "pnpm clean && cross-env NODE_ENV=development pnpm build:watch",

    // build
    "build": "run-s clean build:rollup",
    "build:dev": "cross-env NODE_ENV=development run-s clean build:rollup",
    "build:watch": "rollup -c './rollup.config.js' -w",
    "build:rollup": "rollup -c './rollup.config.js'",

    // other
    "clean": "rimraf \"./dist/*\"",

    "prettier": "prettier --config \"./prettier.config.js\" --ignore-unknown --write \"./src/**/*\"",

    // server
    "serve": "browser-sync start \
      --server './public' \
      --files './public/**/*.(html|css|js)' \
      --port 4000 \
      --open \
      --no-notify",
    "serve:dist": "browser-sync start \
      --server './dist' \
      --files './dist/**/*.(html|css|js)' \
      --port 4000 \
      --open \
      --no-notify \
      --directory",

    // utils
    "json": "json5 --validate \"./package.json5\" && \
      json5 \
      --space 2 \
      --out-file \"./package.json\" \
      \"./package.json5\"",
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "Anatoliy Skichko",
  "license": "ISC",
  "devDependencies": {
    // rollup
    "rollup": "^2.75.6",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2", // css
    "rollup-plugin-terser": "^7.0.2", // js
    "rollup-plugin-analyzer": "^4.0.0",
    "@rollup/plugin-babel": "^5.3.1",

    // types
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",

    // css/scss
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "postcss-preset-env": "^7.7.1",
    "sass": "^1.52.3",

    // typescript
    "tslib": "^2.4.0", // need for rollup
    "typescript": "^4.7.3",

    // other
    "browser-sync": "^2.27.10",

    // utils
    "prettier": "^2.6.2",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "json5": "^2.2.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react-json-view": "^1.21.3"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "browserslist": [
    "defaults"
  ]
}
